<!-- Main Body -->
    <% for (let i = 0; i<commentsOfUsers.length; i++){ %>
    <table>
        <tr>
            <th> <%= commentsOfUsers[i].postingTime.toUTCString() %> </th>
        </tr>
        <tr>
            <td> <%= commentsOfUsers[i].username %> </td>
        </tr>
        <% if (!adminIsAuthorized){%>
        <tr>
            <td> <%= commentsOfUsers[i].userComment %> </td>
        </tr>
        <% } else{ %>
            <tr>
                <td>
                    <span><%= commentsOfUsers[i].userComment %> </span>
                    <span><a href="/comments/delete/<%= commentsOfUsers[i]._id %>" class="fas fa-trash-alt"></a></span>
                </td>
            </tr>
        <% } %>
    </table>
    <% } %>
<% if (!adminIsAuthorized) { %>
<form action="/comments/<%= title %>/addComment" method="post">
    <input name="userComment">
    <input type="submit">
</form>
<% } %>

