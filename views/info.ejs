<h1 style="text-align: center; margin: 2em 0 1em 0;">Manage Users</h1>
<div>
    <center>
        <div class="row">
            <div class="col-lg-4">
                <a href="/user/sortName" class="btn btn-light space">Sort by name</a>
            </div>
            <div class="col-lg-4">
                <a href="/user/sortEmail" class="btn btn-light space">Sort by email</a>
            </div>
            <div class="col-lg-4">
                <a href="/adding" class="btn btn-light space">Add new user</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <h2>Name</h2>
            </div>
            <div class="col-lg-4">
                <h2>Email</h2>
            </div>
            <div class="col-lg-2">
                <h2>Time</h2>
            </div>
            <div class="col-lg-2">
                <h2>Password</h2>
            </div>
            <div class="col-lg-2">
                <h2>Action</h2>
            </div>
        </div>
<% for(int i; i < user.length; i++){ %>
        <div class="row">
            <div class="col-lg-2">
                <h3><%= user[i].name %></h3>
            </div>
            <div class="col-lg-4">
                <h3><%= user[i].email %></h3>
            </div>
            <div class="col-lg-2">
                <h3><%= user[i].regTime %></h3>
            </div>
            <div class="col-lg-2">
                <h3><%= user[i].password %></h3>
            </div>
            <div class="col-lg-2">
                <span><a href="/user/show/<%= user[i]._id %></a>" style="color:mediumseagreen; font-size: 1.3rem;">show</a></span>
                <span><a href="/user/delete/<%= user.[i]._id %></a>" style="color:orangered; font-size: 1.3rem;">delete</a></span>
            </div>
        </div>
<% } %>

    </center>
</div>

