    <div id = "todo">
        <h1> <%= title %> <i id="pencil" class="fas fa-pencil-alt"></i> </h1>
        <input type = "text" placeholder="Add New Todo">
        <ul class="todos">
            <% for(let i = 0; i < todos.length; i++){ %>
            <li><span><i class="fas fa-trash-alt"></i></span><%= todos[i].title %></li>
            <% } %>
        </ul>
        <div id= "buttons">
            <button class="save">Save</button>
            <button class="clear">Clear</button>
        </div>
